<resources>

    <!-- Base application theme. -->
    <style name="Theme.MyEnergy" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f57f17</item>
        <item name="colorPrimaryDark">#bc5100</item>
        <item name="colorPrimaryVariant">#ffb04c</item>
        <item name="backgroundColor">#121212</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>

    </style>

    <!-- Toolbar theme. -->
    <style name="Theme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#272727</item>
        <item name="android:elevation" >4dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="subtitleTextAppearance">@style/Theme.Toolbar.Subtitle</item>
    </style>

    <style name="Theme.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Tabs style. -->
    <style name="Theme.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="history_table_header" >
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorPrimaryDarkAlpha33</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="history_table_row_item">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- DAY FRAGMENT -->
    <style name="Day.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Day.CardView.Header" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/dayCardViewBackgroundHeader</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Day.CardView.Details" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dayCardViewBackgroundDetails</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>


    <style name="Day.CardView.WeatherTemp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Day.CardView.SunInfo" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Day.CardView.Power.Value" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Day.CardView.Power.Text" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Day.CardView.Production" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/production</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Day.CardView.Production.Text" parent="Day.CardView.Power.Text" />
    <style name="Day.CardView.Production.Value" parent="Day.CardView.Power.Value"/>

    <style name="Day.CardView.Inverter.Value" parent="Day.CardView.Power.Value"/>
    <style name="Day.CardView.Inverter.Text" parent="Day.CardView.Power.Text" />


</resources>