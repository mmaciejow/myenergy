<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      tools:context="net.myenv.myenergy.ui.realtime.RealTimeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/info_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:id="@+id/icon_weather"
          android:layout_width="75dp"
          android:layout_height="75dp" />

      <TextView
          android:id="@+id/weather_temp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="5dp"
          android:textSize="25sp"
          android:textStyle="bold"
          android:textColor="@color/white"
          />

    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/info_sun_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="icon_sunrise,icon_sunset,text_sunrise,text_sunset"
         />

    <ImageView
        android:id="@+id/icon_sunrise"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_sunrise"
        app:layout_constraintEnd_toStartOf="@+id/guideline_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_weather" />

    <ImageView
        android:id="@+id/icon_sunset"
        android:layout_width="35dp"
        android:layout_height="35dp"
         android:src="@drawable/ic_sunset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_button"
        app:layout_constraintTop_toBottomOf="@+id/info_weather" />

    <TextView
        android:id="@+id/text_sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/icon_sunrise"
        app:layout_constraintStart_toStartOf="@+id/icon_sunrise"
        app:layout_constraintTop_toBottomOf="@+id/icon_sunrise"

        />

    <TextView
        android:id="@+id/text_sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/icon_sunset"
        app:layout_constraintStart_toStartOf="@+id/icon_sunset"
        app:layout_constraintTop_toBottomOf="@+id/icon_sunset"
        />

    <TableLayout
        android:id="@+id/stats_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:stretchColumns="0"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sunset"/>

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/day_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_table"
        />

    <include
        android:id="@+id/progress"
        layout="@layout/progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/not_found_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_found_data"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>